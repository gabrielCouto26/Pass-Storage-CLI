{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "jest": {
    "preset": "ts-jest"
  }
}
